@model LAB2.Models.Zamowienia

@{
    ViewData["Title"] = "Create";
}

<h1>Tworzenie zamówienia: </h1>

<h4>Zamówienie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Produkt" class="control-label"></label>
                <input asp-for="Produkt" class="form-control" />
                <span asp-validation-for="Produkt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WartoscZamowienia" class="control-label"></label>
                <input asp-for="WartoscZamowienia" class="form-control" />
                <span asp-validation-for="WartoscZamowienia" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="StatusZamowienia" class="control-label"></label>
                <select asp-for="StatusZamowienia" class="form-control" asp-items="ViewBag.StatusyZamowienia"></select>
                <span asp-validation-for="StatusZamowienia" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
