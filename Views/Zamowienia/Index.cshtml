@model IEnumerable<LAB2.Models.Zamowienia>

@{
    ViewData["Title"] = "Index";
}

<h1>Zamówienia</h1>

<p>
    <a asp-action="Create">Stwórz</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Produkt</th>
            <th>Data zamówienia</th>
            <th>Wartość zamówienia</th>
            <th>Status zamówienia</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Produkt)</td>
                <td>@Html.DisplayFor(modelItem => item.Data)</td>
                <td>@Html.DisplayFor(modelItem => item.WartoscZamowienia)</td>
                <td>@Html.DisplayFor(modelItem => item.StatusZamowienia)</td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detale", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
